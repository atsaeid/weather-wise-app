# API Configuration
# Base URL for backend API
VITE_API_BASE_URL=http://localhost:5000/api/v1

# Weather API Configuration
# Get your API key from your chosen weather service provider
VITE_WEATHER_API_KEY=your_weather_api_key_here

# LocationIQ API Configuration (for maps)
# Get your API key from https://locationiq.com/
VITE_LOCATION_IQ_API_KEY=your_location_iq_api_key_here

# Authentication Storage Keys
# These are used for storing tokens in localStorage
VITE_AUTH_TOKEN_KEY=weather_wise_auth_token
VITE_REFRESH_TOKEN_KEY=weather_wise_refresh_token

# Weather API Endpoints
# These should match your backend routes
VITE_WEATHER_API_URL=${VITE_API_BASE_URL}/weather
VITE_LOCATION_SEARCH_API_URL=${VITE_API_BASE_URL}/weather/search

# Authentication API Endpoints
# These should match your backend authentication routes
VITE_AUTH_API_URL=${VITE_API_BASE_URL}/auth
VITE_LOGIN_API_URL=${VITE_API_BASE_URL}/auth/login
VITE_REGISTER_API_URL=${VITE_API_BASE_URL}/auth/register
VITE_LOGOUT_API_URL=${VITE_API_BASE_URL}/auth/logout
VITE_REFRESH_TOKEN_API_URL=${VITE_API_BASE_URL}/auth/refresh

# Favorites API Endpoint
VITE_FAVORITES_API_URL=${VITE_API_BASE_URL}/favorites

# Map Default Configuration
# Default center is set to Tehran
VITE_MAP_ZOOM_LEVEL=12
VITE_MAP_DEFAULT_CENTER_LAT=35.6892
VITE_MAP_DEFAULT_CENTER_LON=51.3890

# Development Mode
# Set to 'development' for development, 'production' for production
NODE_ENV=development 